	<!--Definicja TabControl - wewnątrz znajduje się wsyzstko inne-->
	<TabControl Margin="5" SelectedIndex="1">

		<!--==============================LISTA MODELI==============================-->
		<!--Zakładka z DataGridem przechowującym wszystkie modele odczytane z pliku-->
		<TabItem Header="Lista modeli">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!--==============================WYSZUKIWARKA==============================-->
				<!--Kod wyszukiwarki modeli-->
				<TextBlock Text="Wyszukiwarka:" Margin="5" Grid.Row="0" Grid.Column="0" 
                           VerticalAlignment="Center"/>
				<TextBox MinHeight="25" x:Name="txtWyszukiwarka" Margin="5" Grid.Column="1" Grid.Row="0" 
                         TextChanged="txtWyszukiwarka_TextChanged" FontSize="18"/>

				<!--==============================TABELA Z MODELAMI==============================-->
				<!--Tabele tworzone ręcznie-->
				<DataGrid x:Name="gridModele" AutoGenerateColumns="False" IsReadOnly="True" 
                          CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" SelectedIndex="0"
                      CanUserSortColumns="true" AlternatingRowBackground="LightBlue"
                          GridLinesVisibility="None" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                          Margin="5" SelectionChanged="gridModele_SelectionChanged">
					<DataGrid.Columns>
						<DataGridTextColumn Header="Model" Binding="{Binding MD}" Width="350"/>
						<DataGridTextColumn Header="MSN" Binding="{Binding MSN}" Width="350"/>
						<DataGridTextColumn Header="Rodzaj komputera" Binding="{Binding NazwaZeszytu}" Width="350"/>
					</DataGrid.Columns>
				</DataGrid>
			</Grid>
		</TabItem>

		<!--==============================ZESTAWIENIE==============================-->
		<!--Zakładka z zestawieniem danych z pliku z danymi rzeczywistymi-->
		<TabItem Header="Zestawienie">
			<!--Całość umieszczona w kontrolce ScrollViever dzięki której można przewijać stronę-->
			<ScrollViewer HorizontalScrollBarVisibility="Visible">
				<Grid x:Name="gridZestawienie">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<!--==============================LEGENDA==============================-->
					<Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
						<Label Content="Parametry" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="0" Grid.Column="1">
						<Label Content="Baza danych" Style="{StaticResource GreenHeader}"/>
					</Border>
					<Border Grid.Row="0" Grid.Column="2">
						<Label Content="Rzeczywiste" Style="{StaticResource GreenHeader}"/>
					</Border>
					<Border Grid.Row="0" Grid.Column="3">
						<Label Content="Statusy" Style="{StaticResource GreenHeader}"/>
					</Border>

					<!--==============================STATUSY==============================-->
					<!--Czy jest klucz w systemie-->
					<Border Grid.Row="1" Grid.Column="3">
						<Label Content="Klucz Windows" Style="{StaticResource BlueHeader}"/>
					</Border>
					
					<!--Status aktywacji-->
					<Border Grid.Row="2" Grid.Column="3">
						<Label Content="Aktywacja Windows" Style="{StaticResource BlueHeader}"/>
					</Border>

					<!--Status SecureBoot-->
					<Border Grid.Row="3" Grid.Column="3">
						<Label Content="SecureBoot" Style="{StaticResource BlueHeader}"/>
					</Border>

					<!--Wykryta ilość portów USB-->
					<Border Grid.Row="4" Grid.Column="3">
						<Label Content="Ilość portów USB" Style="{StaticResource BlueHeader}"/>
					</Border>
					<Border Grid.Row="5" Grid.Column="3">
						<TextBlock Text="" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--Wykryta ilość portów SD-->
					<Border Grid.Row="6" Grid.Column="5">
						<Label Content="Ilość portów SD" Style="{StaticResource BlueHeader}"/>
					</Border>
					<Border Grid.Row="7" Grid.Column="3">
						<TextBlock Text="" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--Stan naładowania baterii-->
					<Border Grid.Row="8" Grid.Column="5">
						<Label Content="Aktualny stan baterii" Style="{StaticResource BlueHeader}"/>
					</Border>
					<Border Grid.Row="9" Grid.Column="3">
						<TextBlock Text="" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border Grid.Row="10" Grid.Column="3">
						<TextBlock Text="" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================NAGŁÓWEK - DANE PODSTAWOWE==============================-->
					<Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
						<Label Content="DANE PODSTAWOWE" Style="{StaticResource BlueHeader}"/>
					</Border>

					<!--==============================Model==============================-->
					<Border Grid.Row="2" Grid.Column="0">
						<Label Content="Model" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="2" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.Komputer.MD}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border Grid.Row="2" Grid.Column="2">
						<TextBlock Text="{Binding GathererInfo.Komputer.MD}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================OS==============================-->
					<Border Grid.Row="3" Grid.Column="0">
						<Label Content="OS" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border  Grid.Row="3" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.Komputer.System}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border  Grid.Row="3" Grid.Column="2">
						<TextBlock Text="{Binding GathererInfo.Komputer.System}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================SWM==============================-->
					<Border Grid.Row="4" Grid.Column="0">
						<Label Content="SWM" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="4" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.Swm.Swm}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<!--Dodatkowy panel do którego programowo dodawane są kontolki z informacjami-->
					<Border Grid.Row="4" Grid.Column="2">
						<StackPanel Orientation="Vertical" x:Name="spSwm">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource PropertyValue}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>

					<!--==============================Wear Level==============================-->
					<Border Grid.Row="5" Grid.Column="0">
						<Label Content="Wear Level" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="5" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.Komputer.WearLevel[0], StringFormat={}{0}%>}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border Grid.Row="5" Grid.Column="2">
						<StackPanel Orientation="Vertical" x:Name="spWearLevel">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource PropertyValue}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>

					<!--==============================NAGŁÓWEK - PŁYTA GŁÓWNA I PROCESOR==============================-->
					<Border Grid.Row="6" Grid.Column="0">
						<Label Content="Parametry" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2">
						<Label Content="PŁYTA GŁÓWNA I PROCESOR" Style="{StaticResource BlueHeader}"/>
					</Border>

					<!--==============================Model płyty głównej==============================-->
					<Border Grid.Row="7" Grid.Column="0">
						<Label Content="Model płyty" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="7" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.PlytaGlowna.Model}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border Grid.Row="7" Grid.Column="2">
						<TextBlock Text="{Binding GathererInfo.PlytaGlowna.Model}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================CPU==============================-->
					<Border Grid.Row="8" Grid.Column="0">
						<Label Content="CPU" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="8" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.PlytaGlowna.ID}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border Grid.Row="8" Grid.Column="2">
						<TextBlock Text="{Binding GathererInfo.PlytaGlowna.CPU}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================Wersja Bios==============================-->
					<Border Grid.Row="9" Grid.Column="0">
						<Label Content="Wersja bios" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="9" Grid.Column="1">
						<StackPanel Orientation="Vertical" x:Name="spReaderBios">
							<TextBlock Text="{Binding WersjaBios.Wersja}" Style="{StaticResource PropertyValue}"/>
							<TextBlock Text="{Binding WersjaBios.Opis}" TextWrapping="WrapWithOverflow" Style="{StaticResource PropertyValue}"/>
						</StackPanel>
					</Border>
					<Border Grid.Row="9" Grid.Column="2">
						<TextBlock Text="{Binding GathererInfo.PlytaGlowna.WersjaBios}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================NAGŁÓWEK - RAM I DYSKI TWARDE==============================-->
					<Border Grid.Row="10" Grid.Column="0">
						<Label Content="Nazwa" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2">
						<Label Content="RAM I DYSKI TWARDE" Style="{StaticResource BlueHeader}"/>
					</Border>

					<!--==============================Pamięć RAM==============================-->
					<Border Grid.Row="11" Grid.Column="0">
						<Label Content="RAM" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="11" Grid.Column="1">
						<TextBlock Text="{Binding ReaderInfo.Ram.Pojemnosc, StringFormat={}{0}GB}" Style="{StaticResource PropertyValue}"/>
					</Border>
					<Border Grid.Row="11" Grid.Column="2">
						<TextBlock Text="{Binding GathererInfo.PamiecRamSuma, StringFormat={}{0}GB}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================Dyski==============================-->
					<Border Grid.Row="12" Grid.Column="0" Background="LightSkyBlue">
						<StackPanel x:Name="spDyskiNazwa">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource BlueDescription}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
						
					</Border>
					<Border Grid.Row="12" Grid.Column="1">
						<StackPanel x:Name="spDyskiReader">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource PropertyValue}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>
					<Border Grid.Row="12" Grid.Column="2">
						<StackPanel x:Name="spDyskiGatherer">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource PropertyValue}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>

					<!--==============================MENEDŻER URZĄDZEŃ - NAGŁÓWEK==============================-->
					<Border Grid.Row="13" Grid.Column="0">
						<Label Content="Urządzenia" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2">
						<Label Content="BŁĘDY W MENEDŻERZE URZĄDZEŃ" Style="{StaticResource BlueHeader}"/>
					</Border>

					<Border Grid.Row="14" Grid.Column="0" Background="LightSkyBlue">
						<StackPanel x:Name="spDeviceManagerCaption">
							<!--<StackPanel.Resources>
								<Style BasedOn="{StaticResource BlueDescription}" TargetType="Label"/>
							</StackPanel.Resources>-->
						</StackPanel>
					</Border>
					<Border Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="2">
						<StackPanel x:Name="spDeviceManagerErrorDescription">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource PropertyValue}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>

					<!--==============================LANMAC - NAGŁÓWEK==============================-->
					<Border Grid.Row="15" Grid.Column="0">
						<Label Content="Urządzenia" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="2">
						<Label Content="ADRESY MAC URZĄDZEŃ SIECIOWYCH" Style="{StaticResource BlueHeader}"/>
					</Border>

					<Border Grid.Row="16" Grid.Column="0">
						<StackPanel x:Name="spDeviceCaption">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource BlueDescription}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>
					<Border Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="2">
						<StackPanel x:Name="spDeviceMACAddress">
							<StackPanel.Resources>
								<Style BasedOn="{StaticResource PropertyValue}" TargetType="Label"/>
							</StackPanel.Resources>
						</StackPanel>
					</Border>

					<!--==============================POZOSTAŁE - NAGŁÓWEK==============================-->
					<Border Grid.Row="17" Grid.Column="0">
						<Label Content="Parametry" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="17" Grid.Column="1" Grid.ColumnSpan="2">
						<Label Content="POZOSTAŁE PARAMETRY" Style="{StaticResource BlueHeader}"/>
					</Border>
					<!--==============================Kolor==============================-->
					<Border Grid.Row="18" Grid.Column="0">
						<Label Content="Kolor obudowy" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="18" Grid.Column="1" Grid.ColumnSpan="2">
						<TextBlock Text="{Binding ReaderInfo.Komputer.Kolor}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================Obudowa==============================-->
					<Border Grid.Row="19" Grid.Column="0">
						<Label Content="Rodzaj obudowy" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="19" Grid.Column="1" Grid.ColumnSpan="2">
						<TextBlock Text="{Binding ReaderInfo.Komputer.Obudowa}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================Shipping Mode==============================-->
					<Border Grid.Row="20" Grid.Column="0">
						<Label Content="Shipping Mode" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="20" Grid.Column="1" Grid.ColumnSpan="2">
						<TextBlock Text="{Binding ReaderInfo.Komputer.ShippingMode}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================Rodzaj LCD==============================-->
					<Border Grid.Row="21" Grid.Column="0">
						<Label Content="Rodzaj LCD" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="21" Grid.Column="1" Grid.ColumnSpan="2">
						<TextBlock Text="{Binding ReaderInfo.Komputer.LCD}" Style="{StaticResource PropertyValue}"/>
					</Border>

					<!--==============================Pełny model==============================-->
					<Border Grid.Row="22" Grid.Column="0">
						<Label Content="Pełny model" Style="{StaticResource BlueDescription}"/>
					</Border>
					<Border Grid.Row="22" Grid.Column="1" Grid.ColumnSpan="2">
						<TextBlock Text="{Binding ReaderInfo.Komputer.PelnyModel}" Style="{StaticResource PropertyValue}"/>
					</Border>
				</Grid>
			</ScrollViewer>
		</TabItem>

